- project = project_group_by_url.first
- descriptions = project_group_by_url.map(&:description).join(", ")
.project{:class => parameterize_language(project.main_language), :data => {:id => project.id}}
  .title.clearfix
    %h4= project.name
    - if project.has_http_url?
      = link_to project.github_url, project.github_url, :target => '_blank'
    - else
      %span
        = project.github_url
  = truncate descriptions, :length => 200